{
	"compilerOptions": {
		"outDir": ".build",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"preserveSymlinks": true,
		"module": "ESNext",
		"moduleResolution": "node",
		"target": "ESNext",
		"lib": [
			"ESNext"
		],
		"incremental": true,
		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"noUncheckedIndexedAccess": true,
		"resolveJsonModule": true,
		"sourceMap": true,
		"composite": false
	},
	"include": [
		"src/**/*.ts"
	],
}